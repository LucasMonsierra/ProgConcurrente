package archivos;

import java.io.IOException;
import java.text.DateFormat;
import java.text.SimpleDateFormat;
import java.util.Date;
import java.util.logging.FileHandler;
import java.util.logging.Formatter;
import java.util.logging.LogRecord;
import java.util.logging.Logger;
import java.util.logging.SimpleFormatter;

public class Log extends Formatter {

	private static final DateFormat df = new SimpleDateFormat("dd/MM/yyyy hh:mm:ss.SSS");
	Logger logger = Logger.getLogger(Logger.GLOBAL_LOGGER_NAME);
	
	public Log() throws SecurityException, IOException {
        FileHandler fileTxt = new FileHandler("ExecutionLog.txt");
        fileTxt.setFormatter(new SimpleFormatter());
        logger.addHandler(fileTxt);
	}

	public Logger getLog() {
		return logger;
	}
	
	public String format(LogRecord record) {
        StringBuilder builder = new StringBuilder(1000);
        builder.append("[").append(df.format(new Date(record.getMillis()))).append("]").append(" -> ");
        builder.append(record.getSourceClassName()).append(".").append(record.getSourceMethodName()).append(" - ");
        builder.append("[").append(record.getLevel()).append("] - ").append(formatMessage(record)).append("\n\n");
        return builder.toString();
    }
}
