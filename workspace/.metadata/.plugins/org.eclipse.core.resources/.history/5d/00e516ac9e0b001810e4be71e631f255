package test;

import java.util.HashMap;

import org.junit.runner.JUnitCore;
import org.junit.runner.Result;

import archivos.Matriz;

public class JunitCore {
	
	private int i = 0;
	
	public JunitCore (HashMap<String, Matriz> hash) {
		TestPInvariantes.prepareBefore(hash.get("pinvariantes"), hash.get("resultado"));
	}
	
	public String testearMarcado(Matriz marcado) {

		i++;
		TestPInvariantes.prepare(marcado, hash.get("pinvariantes"), hash.get("resultado"));
		Result result = new JUnitCore().run(TestPInvariantes.class);
		String resultado = "Ejecución nº: " + i + ". Test ran: " + result.getRunCount() + ", Failed: " + result.getFailureCount() + "\n";
	    System.out.printf(resultado);
		return resultado;
	}
}