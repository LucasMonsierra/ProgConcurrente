package test;

import java.util.HashMap;

import org.junit.runner.JUnitCore;
import org.junit.runner.Request;
import org.junit.runner.Result;

import archivos.Matriz;

public class JunitCore {
	
	public String testearMarcado(HashMap<String, Matriz> hash, Matriz marcado) {

		TestPInvariantes.prepare(marcado, hash.get("pinvariantes"), hash.get("resultado"));
		//Result result = (new JUnitCore()).run(Request.method(TestPInvariantes.class, "pinvariantes"));
		Result result = jUnitCore.run(TestPInvariantes.class);
		String resultado = "Test ran: " + result.getRunCount() + ", Failed: " + result.getFailureCount() + "\n";
	    System.out.printf(resultado);
		return resultado;
	}
}



