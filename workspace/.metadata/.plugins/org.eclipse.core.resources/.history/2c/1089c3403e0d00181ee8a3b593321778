package planta;

import monitor.GestorMonitor;
import recursos.*;

public class Linea implements Runnable{
	
	private GestorMonitor gm;
	private int[] secuencia;
	private Robot1 r1;
	private Robot1 r2;
	private Robot1 r3;
	private Maquina1 m1;
	private Maquina1 m2;
	private Maquina1 m3;
	private Maquina1 m4;
	
	public Linea(GestorMonitor gm, int[] s) {
		this.gm = gm;
		this.secuencia = s;
	}
	
	@Override
	public void run() {
		for(;;){//int j=0;j<500;j++) {
			int i = 0;
			while (i < secuencia.length) {
				gm.dispararTransicion(secuencia[i]);
				i++;
			}
		}
	}

}
